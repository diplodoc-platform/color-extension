{
  "name": "@diplodoc/color-extension",
  "version": "1.0.0",
  "description": "Inline color plugin for Diplodoc transformer and builder",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "engines": {
    "npm": ">=11.5.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diplodoc-platform/color-extension"
  },
  "keywords": [
    "markdown-it",
    "markdown-it-plugin",
    "markdown",
    "color",
    "diplodoc"
  ],
  "author": "nkjmsss",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/diplodoc-platform/color-extension/issues"
  },
  "homepage": "https://github.com/diplodoc-platform/color-extension#readme",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "default": "./build/index.js"
    }
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:js": "node esbuild/build.mjs",
    "build:declarations": "tsc -p tsconfig.types.json --emitDeclarationOnly",
    "prepublishOnly": "npm run typecheck && npm run lint && npm test && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "lint update && lint",
    "lint:fix": "lint update && lint fix",
    "pre-commit": "lint update && lint-staged",
    "prepare": "husky"
  },
  "peerDependencies": {
    "markdown-it": "^13.0.0"
  },
  "devDependencies": {
    "@diplodoc/lint": "^1.14.1",
    "@diplodoc/tsconfig": "^1.0.2",
    "@types/markdown-it": "^13.0.9",
    "@vitest/coverage-v8": "^3.2.4",
    "markdown-it": "^13.0.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
